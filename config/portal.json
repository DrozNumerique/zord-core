{
	"public": [
		"portal"
	],
	"lang": [
	    "en-US",
	    "fr-FR"
	],
	"chosen": {
		"standard": {
			"width": "100%",
			"inherit_select_classes": true
		},
		"no-single": {
			"width": "100%",
			"disable_search_threshold": 10,
			"inherit_select_classes": true
		}
	},
	"states": {
		"secure": {
			"true" : "fa-chain",
			"false": "fa-chain-broken"
		}
	},
	"user": {
		"profile": [
			"name",
			"email",
			"ipv4",
			"ipv6",
			"password"
		]
	},
	"slides": {
		"default" : {
			"index": 0,
			"selector": "li.frame",
			"direction": "vertical",
			"transition": "swipe",
			"interval": 0,
			"limits": "block",
			"step": 1,
			"controls": {
				"backward": true,
				"forward": true,
				"pause": false,
				"play": false,
				"jump": false
			}
		}
	},
	"list": {
		"context": {
			"id": "context",
			"class": ["admin-list"],
			"create": "visible",
			"disabled": ["name"],
			"columns": {
				"name": "text",
				"title": "text"
			}
		},
		"context-admin": {
			"class": ["admin"],
			"actions": {
				"urls": "arrow-circle-right"
			}
		},
		"context-manager": {
			"class": ["manager"],
			"actions": {
				"delete": "times", 
				"update": "check",
				"urls": "arrow-circle-right"
			}
		},
		"users": {
			"id": "users",
			"class": ["admin-list"],
			"create": "visible",
			"disabled": ["login"],
			"columns": {
				"login": "text",
				"name": "text",
				"email": "email"
			},
			"actions": {
				"delete": "times", 
				"update": "check",
				"profile": "user",
				"notify": "envelope"
			}
		}
	}
}