{
	"public": [
		"portal"
	],
	"lang": [
	    "fr-FR",
	    "en-US"
	],
	"chosen": {
		"standard": {
			"width": "100%",
			"inherit_select_classes": true
		},
		"no-single": {
			"width": "100%",
			"disable_search_threshold": 10,
			"inherit_select_classes": true
		}
	},
	"states": {
		"secure": {
			"true" : "fa-chain",
			"false": "fa-chain-broken"
		}
	},
	"user": {
		"profile": [
			"name",
			"email",
			"ipv4",
			"ipv6",
			"password"
		]
	},
	"slides": {
		"default" : {
			"index": 0,
			"selector": "li.frame",
			"direction": "vertical",
			"transition": "swipe",
			"interval": 0,
			"limits": "block",
			"step": 1,
			"controls": {
				"backward": true,
				"forward": true,
				"pause": false,
				"play": false,
				"jump": false
			}
		}
	},
	"list": {
		"input": ["text","email","password","checkbox","date","time","datetime-local","week","month","hidden","number","tel","url","file","color","range"],
		"attributes": {
			"disabled": ["update"],
			"readonly": ["update"],
			"required": ["create","update"],
			"min"     : ["create","update"],
			"max"     : ["create","update"]
		},
		"dataset": {"empty": "no"},
		"context": {
			"id": "context",
			"class": "admin",
			"create": "visible",
			"fields": {
				"name": "text",
				"title": "text"
			},
			"options": {
				"name": {
					"disabled": true
				}
			},
			"actions": {
				"delete": "times", 
				"update": "check",
				"urls": "arrow-circle-right"
			}
		},
		"users": {
			"class": "admin",
			"create": "visible",
			"fields": {
				"login": "text",
				"name": "text",
				"email": "email"
			},
			"actions": {
				"delete": "times", 
				"update": "check",
				"profile": "user",
				"notify": "envelope"
			},
			"options": {
				"login": {
					"disabled": true
				}
			}
		},
		"urls": {
			"class": "admin",
			"create": "hidden",
			"headers": {
				"secure": "icon",
				"action": "icon"
			},
			"fields": {
				"secure": "states",
				"host": "text",
				"path": "text",
				"action": "icon"
			},
			"options": {
				"secure": {
					"class": "state",
					"default": "false",
					"header": {
						"icon": "lock"
					}
				},
				"action": {
					"header": {
						"class": "add",
						"icon": "plus",
						"title": "add"
					},
					"class": "remove",
					"icon": "times",
					"title": "remove"
				}
			}
		},
		"roles": {
			"class": "admin",
			"create": "hidden",
			"headers": {
				"action": "icon"
			},
			"fields": {
				"role": "select",
				"context": "select",
				"start": "date",
				"end": "date",
				"action": "icon"
			},
			"options": {
				"action": {
					"header": {
						"class": "add",
						"icon": "plus",
						"title": "add"
					},
					"class": "remove",
					"icon": "times",
					"title": "remove"
				}
			}
		},
		"ipv4": {
			"class": ["admin","ip"],
			"create": "hidden",
			"headers": {
				"action": "icon"
			},
			"fields": {
				"ip": "ipv4",
				"mask": "number",
				"include": "select",
				"action": "icon"
			},
			"options": {
				"ip": {
					"default": "0.0.0.0"
				},
				"mask": {
					"default": "24",
					"min": 0,
					"max": 32
				},
				"include": {
					"default": "1"
				},
				"action": {
					"header": {
						"class": "add",
						"icon": "plus",
						"title": "add"
					},
					"class": "remove",
					"icon": "times",
					"title": "remove"
				}
			}
		},
		"ipv6": {
			"class": ["admin","ip"],
			"create": "hidden",
			"headers": {
				"action": "icon"
			},
			"fields": {
				"ip": "ipv6",
				"mask": "number",
				"include": "select",
				"action": "icon"
			},
			"options": {
				"ip": {
					"default": "0:0:0:0:0:0:0:0"
				},
				"mask": {
					"default": "64",
					"min": 0,
					"max": 128
				},
				"include": {
					"default": "1"
				},
				"action": {
					"header": {
						"class": "add",
						"icon": "plus",
						"title": "add"
					},
					"class": "remove",
					"icon": "times",
					"title": "remove"
				}
			}
		}
	}
}